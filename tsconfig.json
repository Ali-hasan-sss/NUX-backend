{
  // Visit https://aka.ms/tsconfig to read more about this file

  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // لأن مشروعك CommonJS
    "rootDir": "./src", // مصدر ملفات TypeScript
    "outDir": "./dist", // مجلد الإخراج
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true, // يسمح باستيراد JSON مثل Firebase
    "types": ["node", "jest"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
